<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile_test.Views.PersonalDetail"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:mobile_test.ViewModels"
             xmlns:model="clr-namespace:mobile_test.Models">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="First name:" FontSize="Medium" />
        <Label Text="{Binding FirstName}" FontSize="Small"/>
        <Label Text="Last name:" FontSize="Medium" />
        <Label Text="{Binding LastName}" FontSize="Small"/>
        <Label Text="Age:" FontSize="Medium" />
        <Label Text="{Binding age}" FontSize="Small"/>
        <Label Text="Bio:" FontSize="Medium" />
        <Label Text="{Binding Bio}" FontSize="Small"/>
        <Label Text="Gender:" FontSize="Medium" />
        <Label Text="{Binding Gender}" FontSize="Small"/>
        <Label Text="Prefference:" FontSize="Medium" />
        <Label Text="{Binding Prefference}" FontSize="Small"/>
    </StackLayout>

</ContentPage>